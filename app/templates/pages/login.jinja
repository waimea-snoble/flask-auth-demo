{#=====================================================
  Sign Up page
  - List of things passed in as 'things' array
  - Form for adding a new user
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo - Login

{% endblock %}


{% block content %}

    <article>

        <h3>Login</h3>

        <form action="/login-user" method="POST">

            <input
                type="text"
                name="username"
                placeholder="Username"
                required
            >

            <input
                type="password"
                name="password"
                placeholder="Password"
                required
            >

            <button>Login</button>

        </form>

    </article>

{% endblock %}

